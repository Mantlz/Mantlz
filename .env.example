# Database Configuration
# PostgreSQL connection string - replace with your database credentials
DATABASE_URL="postgresql://username:password@localhost:5432/mantlz"

# Authentication (Clerk)
# Get these from https://clerk.com after creating an application
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_here"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"

# Email Service (Resend)
# Get API key from https://resend.com
RESEND_API_KEY="re_your_api_key_here"
RESEND_FROM_EMAIL="contact@yourdomain.com"

# Payment Processing (Stripe)
# Get these from https://stripe.com dashboard
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_CLIENT_ID="ca_your_client_id"
NEXT_PUBLIC_STRIPE_PUBLIC_KEY="pk_test_your_public_key"
NEXT_PUBLIC_STRIPE_STANDARD_PRICE_ID="price_your_standard_price_id"
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID="price_your_pro_price_id"



# File Uploads (Uploadcare)
# Get public key from https://uploadcare.com
NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY="your_uploadcare_public_key"

# Application URLs
# Update these for your deployment
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DOMAIN="localhost:3000"

# Analytics (PostHog) - Optional
# Get these from https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Rate Limiting (Upstash Redis) - Optional
# Get these from https://upstash.com
UPSTASH_REDIS_REST_URL="your_redis_url"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# Cron Jobs - Optional
# Secret for securing cron endpoints
CRON_SECRET="your_cron_secret"

# MarbleCMS Integration
# Get these from your MarbleCMS dashboard
MARBLE_API_URL="https://api.marblecms.com/v1"
MARBLE_WORKSPACE_KEY="you_here"

# Cookie Consent Management (c15t) - Optional
NEXT_PUBLIC_C15T_URL=""

# SDK Configuration
# Internal API key for the Mantlz SDK
MANTLZ_KEY="your_mantlz_api_key"

# Default Email Settings
DEFAULT_FROM_EMAIL="noreply@yourdomain.com"
MANTLZ_THANK_YOU_URL="http://localhost:3000/thank-you"
